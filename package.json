{
  "name": "used-trucks-marketplace",
  "version": "1.0.0",
  "description": "Used trucks marketplace platform for Arawa Inc.",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "dev:client": "vite",
    "dev:workers": "wrangler dev workers/index.ts",
    "build": "tsc",
    "build:client": "vite build",
    "build:workers": "esbuild workers/index.ts --bundle --outfile=dist/worker.js --format=esm --platform=node",
    "start": "node dist/index.js",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "verify:persistence": "ts-node src/scripts/verifyPersistence.ts",
    "migrate:inquiries": "ts-node src/scripts/migrate-inquiries.ts",
    "update:admin": "ts-node src/scripts/update-admin-credentials.ts",
    "create-admin": "ts-node scripts/create-admin.ts",
    "migrate:cloudflare": "ts-node scripts/migrate-to-cloudflare.ts",
    "deploy:workers": "wrangler deploy",
    "deploy:workers:dev": "wrangler deploy --env development",
    "deploy:pages": "npm run build:client && wrangler pages deploy dist/client --project-name arawa-marketplace",
    "deploy": "npm run deploy:workers && npm run deploy:pages",
    "cf:db:init": "wrangler d1 execute arawa-marketplace-db --file=./schema.sql",
    "cf:db:seed": "wrangler d1 execute arawa-marketplace-db --file=./seed.sql",
    "cf:db:init:dev": "wrangler d1 execute arawa-marketplace-db-dev --file=./schema.sql --env development",
    "cf:db:seed:dev": "wrangler d1 execute arawa-marketplace-db-dev --file=./seed.sql --env development",
    "cf:setup": "bash scripts/cloudflare-setup.sh"
  },
  "keywords": [
    "trucks",
    "marketplace",
    "arawa"
  ],
  "author": "Arawa Inc.",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.13.2",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^9.2.2",
    "cors": "^2.8.5",
    "dompurify": "^3.3.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "hono": "^4.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-helmet-async": "^2.0.5",
    "react-quill": "^2.0.0",
    "react-quill-new": "^3.7.0",
    "react-router-dom": "^7.11.0",
    "sharp": "^0.33.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.8",
    "@types/cors": "^2.8.17",
    "@types/dompurify": "^3.0.5",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.6",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/supertest": "^6.0.3",
    "@vitejs/plugin-react": "^5.1.2",
    "esbuild": "^0.24.0",
    "fast-check": "^3.15.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^7.3.0",
    "wrangler": "^3.90.0"
  }
}
